#include <stdbool.h>
#include <string.h>

bool isAnagram(char* s, char* t) {
    int count[26] = {0};

    // If lengths differ, they can't be anagrams
    if (strlen(s) != strlen(t))
        return false;

    // Count characters in s
    for (int i = 0; s[i] != '\0'; i++) {
        count[s[i] - 'a']++;
    }

    // Subtract using characters in t
    for (int i = 0; t[i] != '\0'; i++) {
        count[t[i] - 'a']--;
        if (count[t[i] - 'a'] < 0)
            return false;
    }

    return true;
}
