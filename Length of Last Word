#include <iostream>
#include <string>
#include <sstream>
using namespace std;

class Solution {
public:
    int lengthOfLastWord(string s) {
        stringstream ss(s);
        string word;
        string lastWord;
        
        while (ss >> word) {
            lastWord = word;
        }
        
        return lastWord.length();
    }
};
