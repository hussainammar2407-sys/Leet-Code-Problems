#include <unordered_map>
#include <string>

class Solution {
public:
    int romanToInt(std::string s) {
        std::unordered_map<char, int> roman_map = {
            {'I', 1},
            {'V', 5},
            {'X', 10},
            {'L', 50},
            {'C', 100},
            {'D', 500},
            {'M', 1000}
        };
        
        int total = 0;
        for (int i = 0; i < s.length() - 1; i++) {
            if (roman_map[s[i]] < roman_map[s[i + 1]])
                total -= roman_map[s[i]];
            else
                total += roman_map[s[i]];
        }
        total += roman_map[s.back()];
        
        return total;
    }
};
